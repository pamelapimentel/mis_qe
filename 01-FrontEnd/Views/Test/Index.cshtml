@model TestViewModel

<form action="~/test/save" method="post">
    <div class="alert-container"></div>
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" name="Name" class="form-control" />
        <span data-key="Name" class="form-validation-failed"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="Email" class="form-control" />
        <span data-key="Email" class="form-validation-failed"></span>
    </div>
    <div class="form-group">
        <label>Edad</label>
        <input type="text" name="Age" class="form-control" />
        <span data-key="Age" class="form-validation-failed"></span>
    </div>
    <div>
        <input type="text" class="form-control" placeholder="Timezone" id="input-datalist">
    </div>

    <div class="form-group">
        <label for="input-datalist">Timezone</label>
        <input type="text" class="form-control" placeholder="Timezone" list="list-timezone" id="input-datalist">
        <datalist id="list-timezone">
            <option>Asia/Aden</option>
            <option>Asia/Aqtau</option>
            <option>Asia/Baghdad</option>
            <option>Asia/Barnaul</option>
            <option>Asia/Chita</option>
            <option>Asia/Dhaka</option>
            <option>Asia/Famagusta</option>
            <option>Asia/Hong_Kong</option>
            <option>Asia/Jayapura</option>
            <option>Asia/Kuala_Lumpur</option>
            <option>Asia/Jakarta</option>
        </datalist>
    </div>
</form>

@section Scripts {
    <script>
        function hello(r) {
            console.log(r);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.3.7/dist/latest/bootstrap-autocomplete.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', e => {
            $('#input-datalist').autocomplete({
                source: [
                    "Google Cloud Platform",
                    "Amazon AWS",
                    "Docker",
                    "Digital Ocean"
                ]
            })
        }, false);
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', e => {
            $('#input-datalist').autocomplete()
        }, false);
    </script>
}